{% extends 'layout.html.twig' %}

{% block link %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block title %}BDE Platform{% endblock %}

{% block header %}
    <header>
        <div id="accueil">
            <div>
                <div>
                    <img src="img/logos/logo_blanc.png" alt="logo">
                    <h3> BDE Platform </h3>
                </div>
                <h1>Nous te proposons :</h1>
            </div>
            <div id="carousel_categorie" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carousel_categorie" data-bs-slide-to="0"
                            class="active"></button>
                    <button type="button" data-bs-target="#carousel_categorie" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#carousel_categorie" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#carousel_categorie" data-bs-slide-to="3"></button>
                </div>

                <div class="carousel-inner">
                    {% for category in global.categories %}
                    <div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}" data-bs-interval="3000">
                        <a href="{{ route('event.category', {slug: category.slug}) }}">
                            <img src="/img/icones/{{ category.slug }}.svg" alt="afterwork">
                            <p>{{ category.name }}</p>
                        </a>
                    </div>
                    {% endfor %}
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carousel_categorie"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel_categorie"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
        </div>
    </header>
{% endblock %}
{% block body %}
    <main>
        <section id="evenements">
            <div>
                <h2>Les évènements</h2>
                <img src="img/icones/ic_round-event-available.svg" alt="icone evenement">
            </div>
            <div>
                {% for event in events %}
                    {% include 'partials/event-card.html.twig' with {event} %}
                {% endfor %}
            </div>

            <p>
                <a href="#evenements" id="numPageEvenement">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
            </p>

        </section>

        <section id="rejoinsNous">
            <div>

                <div>
                    <div class="bordureRectangle"></div>
                    <div class="bordureRectangle"></div>
                    <div class="rectanglePlein" id="rectanglePleinRejoinsnous"></div>
                    <img src="img/rejoins-nous.jpg" alt="personnes">
                </div>
            </div>

            <div>
                <h2>Rejoins-nous !</h2>
                <ul>
                    <li><p>Crée-toi un compte pour participer aux évènements.</p></li>
                    <li><a href="{{ route('signup') }}" class="btnAvecFond">Je m'inscris <i
                                    class="fa-solid fa-pencil"></i></a></li>
                    <li></li>
                    <a href="{{ route('login') }}" class="btnSansFond">Je me connecte <i
                                class="fa-solid fa-arrow-right-to-bracket"></i></a></li>
                    </p>
                </ul>
            </div>

        </section>

    </main>
    </div>
{% endblock %}
